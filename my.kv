<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path : "/Users"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
<Choice>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: 'Voulez-vous r√©initialiser la liste de fichiers?'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "No"
                on_release: root.cancel()
            Button:
                text: "Yes"
                on_press: root.clear_files()
                on_release: root.cancel()

<ChoiceFiles>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: 'Voulez-vous remplacer le fichiers?'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "No"
                on_release: root.cancel()
            Button:
                text: "Yes"
                on_press: root.selectchoice()
                on_release: root.cancel()

            

<MyPanel>:
    
    do_default_tab : False
    
    TabbedPanelItem :
    
        text : "Main"
        font_size :  20
        FloatLayout:

            Button:
                id : sbmlMain
                text:"Choose .sbml file"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.8}
                on_press : root.show_load("sbml","sbml","main")
            Button:
                id : faa1Main
                text:"Choose .faa file"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.6}
                on_press : root.show_load("faa1","faa","main")

            Button:
                id : faa2Main
                text:"Choose .faa file "
                pos_hint: {"center_x" : 0.2,"center_y" : 0.4}
                on_press : root.show_load("faa2","faa","main")
            
            
            Button:
                id : fnaMain
                text:"Choose .fna file"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.8}
                on_press : root.show_load("fna","fna","main")
            
            Button:
                id : tsvMain
                text:"Choose .tsv file "
                pos_hint: {"center_x" : 0.7,"center_y" : 0.6}
                on_press : root.show_load("tsv","tsv","main")
            
            Button:
                id : gffMain
                text:"Choose .gff file "
                pos_hint: {"center_x" : 0.7,"center_y" : 0.4}
                on_press : root.show_load("gff","gff","main")
            
            Button:
                id : btn7
                text:"Run"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.2}
                on_press : root.go_module("main")

            Button:
                id : btn
                text:"Parameters"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.2}
                on_press : root.show_param()
            Button:
                id : btn
                size_hint: 0.12,0.12 
                text:"print files "
                pos_hint: {"center_x" : 0.9,"center_y" : 0.5}
                on_press : root.print_files()


    TabbedPanelItem :
    
        text : "BLASTing"
