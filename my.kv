<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path : "/Users"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                background_color:"#F00020"
                on_release: root.cancel()

            Button:
                text: "Load"
                background_color:"#34C924"
                on_press: root.load(filechooser.path, filechooser.selection)

<ChoiceFiles>:
    auto_dismiss:False
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: 'Voulez-vous remplacer le fichiers?'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "No"
                background_color:"#F00020"
                on_press: root.cancel()
            Button:
                text: "Yes"
                background_color:"#78c679"
                on_press: root.selectchoice()
                on_release: root.cancel()

            

<MyPanel>:
    
    do_default_tab: False
    size:(400,400)
    TabbedPanelItem:
    
        text: "Main"
        font_size:  20
        FloatLayout:

            Button:
                id : sbmlMain
                text:"Choose .sbml file"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.8}
                on_press : root.show_load("sbml","sbml","main")
            Button:
                id : faa1Main
