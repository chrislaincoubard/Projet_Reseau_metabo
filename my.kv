<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path : "/Users"

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                background_color:"#F00020"
                on_release: root.cancel()

            Button:
                text: "Load"
                background_color:"#34C924"
                on_press: root.load(filechooser.path, filechooser.selection)

<ChoiceFiles>:
    auto_dismiss:False
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: 'Voulez-vous remplacer le fichiers?'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "No"
                background_color:"#F00020"
                on_press: root.cancel()
            Button:
                text: "Yes"
                background_color:"#78c679"
                on_press: root.selectchoice()
                on_release: root.cancel()

            

<MyPanel>:
    
    do_default_tab: False
    size:(400,400)
    TabbedPanelItem:
    
        text: "Main"
        font_size:  20
        FloatLayout:

            Button:
                id : sbmlMain
                text:"Choose .sbml file"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.8}
                on_press : root.show_load("sbml","sbml","main")
            Button:
                id : faa1Main
                text:"Choose .faa file"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.6}
                on_press : root.show_load("faa1","faa","main")

            Button:
                id : faa2Main
                text:"Choose .faa file "
                pos_hint: {"center_x" : 0.2,"center_y" : 0.4}
                on_press : root.show_load("faa2","faa","main")
            
            
            Button:
                id : fnaMain
                text:"Choose .fna file"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.8}
                on_press : root.show_load("fna","fna","main")
            
            Button:
                id : tsvMain
                text:"Choose .tsv file "
                pos_hint: {"center_x" : 0.7,"center_y" : 0.6}
                on_press : root.show_load("tsv","tsv","main")
            
            Button:
                id : gffMain
                text:"Choose .gff file "
                pos_hint: {"center_x" : 0.7,"center_y" : 0.4}
                on_press : root.show_load("gff","gff","main")
            
            Button:
                id : btn7
                text:"Run"
                background_color:"#a1d99b"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.2}
                on_press : root.go_module("main")

            Button:
                id : btn
                background_color:"#CECECE"
                text:"Parameters"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.2}
                on_press : root.show_param()
            Button:
                id : btn 
                size_hint:(0.18,0.07)
                text:"View files "
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.9,"center_y" : 0.94}
                on_press : root.print_files()


    TabbedPanelItem :
    
        text : "BLASTing"
        font_size :  20

        FloatLayout:

            Button:
                id : sbmlBlast
                text:"Choose .sbml file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.8}
                on_press : root.show_load("sbml","sbml","blast")
            Button:
                id : faa1Blast
                text:"Choose .faa file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.6}
                on_press : root.show_load("faa1","faa","blast")

            Button:
                id : faa2Blast
                text:"Choose .faa file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.4}
                on_press : root.show_load("faa2","faa","blast")
            
            Button:
                id : gffBlast
                text:"Choose .gff file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.2}
                on_press : root.show_load("gff","gff","blast")
            
            Button:
                id : btn
                text:"Run "
                background_color:"#a1d99b"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.6}
                on_press : root.go_module("blast")
            Button:
                id : btn
                background_color:"#CECECE"
                text:"Parameters"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.4}
                on_press : root.show_param()
            Button:
                id : btn 
                size_hint:(0.18,0.07)
                text:"View files "
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.9,"center_y" : 0.94}
                on_press : root.print_files()

    TabbedPanelItem :
    
        text : "MPWTing"
        font_size :  20

        FloatLayout:

            Button:
                id : fnaMpwting
                text:"Choose .fna file"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.6}
                on_press : root.show_load("fna","fna","mpwting")
            
            Button:
                id : tsvMpwting
                text:"Choose .tsv file"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.4}
                on_press : root.show_load("tsv","tsv","mpwting")
            
            Button:
                id : gffMpwting
                text:"Choose .gff file"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.8}
                on_press : root.show_load("gff","gff","mpwting")
            
            Button:
                id : btn
                text:"Run"
                background_color:"#a1d99b"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                on_press : root.go_module("mpwting") 
            
            Button:
                id : btn 
                size_hint:(0.18,0.07)
                text:"View files "
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.9,"center_y" : 0.94}
                on_press : root.print_files()

    TabbedPanelItem :
        text : "Graphs"
        font_size : 20
        id : graph_panel

        GridLayout :
            cols:3
            id : Grid

            Box_meta:

            Box_reac:

            BoxLayout :
                size_hint_x : 0.2
                orientation : "vertical"
                background_color : "#E11E1E"
                Button :
                    text : "1) load file"
                    size_hint : 1,0.3
                    on_release : root.show_load("json","json","graph")
                Label :
                    text : "2) Input name to show\n graph without extension \n saved as html file"
                TextInput :
                    id : TI_graph
                    text : "graph.html"
                    multiline : False
                    on_text_validate : root.show_graph()
                    size_hint : 1,0.3
                Label :
                    text : "3) Input name\n to save graph\n show the graph\n before saving\n saved as json file"

                TextInput :
                    id : TI_save
                    text : "Save_graph.json"
                    size_hint : 1,0.3
                    multiline : False
                    on_text_validate : root.save_graph()
                Label :
                    text : "Clear data before\n generating new graph"

                Button :
                    text : "Clear data"
                    size_hint : 1,0.3
                    on_release : root.clear_graph_data()
            

<Box_reac>
    orientation : "vertical"
    size_hint_x : 0.4

    Button :
        size_hint_x : 1
