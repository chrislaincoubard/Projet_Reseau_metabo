#:import sys os
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            dirselect : True
            path : sys.path.expanduser('~')

        BoxLayout:
            Button:
                text: "Cancel"
                background_color:"#F00020"
                on_release: root.cancel()

            Button:
                text: "Load"
                background_color:"#34C924"
                on_press: root.load(filechooser.path, filechooser.selection)

<MyPanel>:

    do_default_tab: False
    size:(400,400)
    tab_pos : "top_mid"
    on_current_tab : root.on_tab_change(self.current_tab)
    TabbedPanelItem:
        text: "Main"
        font_size:  20
        FloatLayout:
            Button:
                id : sbmlMain
                text:"Choose .sbml file"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.8}
                on_press : root.show_load("sbml","sbml")
            Button:
                id : faaSMain
                text:"Choose .faa subject file"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.6}
                on_press : root.show_load("faaS","faa")

            Button:
                id : faaMMain
                text:"Choose .faa model file "
                pos_hint: {"center_x" : 0.2,"center_y" : 0.4}
                on_press : root.show_load("faaM","faa")
            
            
            Button:
                id : fnaMain
                text:"Choose .fna file"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.8}
                on_press : root.show_load("fna","fna")
            
            Button:
                id : tsvMain
                text:"Choose .tsv file "
                pos_hint: {"center_x" : 0.7,"center_y" : 0.6}
                on_press : root.show_load("tsv","tsv")
            
            Button:
                id : gffMain
                text:"Choose .gff file "
                pos_hint: {"center_x" : 0.7,"center_y" : 0.4}
                on_press : root.show_load("gff","gff")
            
            Button:
                id : btn7
                text:"Run"
                background_color:"#a1d99b"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.2}
                on_press : root.go_module()

            Button:
                id : btn
                background_color:"#CECECE"
                text:"Parameters"
                pos_hint: {"center_x" : 0.2,"center_y" : 0.2}
                on_press : root.show_param()
            Button:
                id : btn 
                size_hint:(0.18,0.07)
                text:"View files "
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.9,"center_y" : 0.94}
                on_press : root.print_files()
            Button:
                id : btn 
                size_hint:(0.18,0.07)
                text:"Set main directory"
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.94}
                on_press : root.choosedirectory()

    TabbedPanelItem :
    
        text : "BLASTing"
        font_size :  20

        FloatLayout:

            Button:
                id : sbmlBlast
                text:"Choose .sbml file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.8}
                on_press : root.show_load("sbml","sbml")
            Button:
                id : faaSBlast
                text:"Choose .faa subject file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.6}
                on_press : root.show_load("faaS","faa")

            Button:
                id : faaMBlast
                text:"Choose .faa model file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.4}
                on_press : root.show_load("faaM","faa")
            
            Button:
                id : gffBlast
                text:"Choose .gff file"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.2}
                on_press : root.show_load("gff","gff")
            
            Button:
                id : btn
                text:"Run "
                background_color:"#a1d99b"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.6}
                on_press : root.go_module()
            Button:
                id : btn
                background_color:"#CECECE"
                text:"Parameters"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.4}
                on_press : root.show_param()
            Button:
                id : btn 
                size_hint:(0.18,0.07)
                text:"View files "
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.9,"center_y" : 0.94}
                on_press : root.print_files()
            Button:
                id : btn 
                size_hint:(0.18,0.07)
                text:"Set main directory"
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.94}
                on_press : root.choosedirectory()

    TabbedPanelItem :
    
        text : "MPWTing"
        font_size :  20

        FloatLayout:

            Button:
                id : fnaMpwting
                text:"Choose .fna file"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.6}
                on_press : root.show_load("fna","fna")
            
            Button:
                id : tsvMpwting
                text:"Choose .tsv file"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.4}
                on_press : root.show_load("tsv","tsv")
            
            Button:
                id : gffMpwting
                text:"Choose .gff file"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.8}
                on_press : root.show_load("gff","gff")
            
            Button:
                id : btn
                text:"Run"
                background_color:"#a1d99b"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                on_press : root.go_module() 
            
            Button:
                id: btn 
                size_hint:(0.18,0.07)
                text:"View files "
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.9,"center_y" : 0.94}
                on_press: root.print_files()

    TabbedPanelItem:
        text: "Merging"
        font_size:  20
        FloatLayout:
            Button:
                id : merge
                text:"Merge files"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.5}
                on_press : root.module_merge()
            Button:
                id : btn 
                size_hint:(0.25,0.10)
                text:"Set main directory with \nBLAST and MPWT results"
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.7}
                on_press : root.choosedirectory()
            
    TabbedPanelItem :
        text : "Graphs"
        font_size : 20
        id : graph_panel

        GridLayout :
            cols:3
            id : Grid

            Box_meta:

            Box_reac:

            BoxLayout :
                size_hint_x : 0.2
                orientation : "vertical"
                background_color : "#E11E1E"
                Button :
                    text : "1) load file"
                    size_hint : 1,0.3
                    on_release : root.show_load("json","json")
                Button :
                    text : "See current search"
                    size_hint : 1,0.3
                    on_release : root.print_keyword()    
                Label :
                    text : "2) Input name to show graph without extension saved as html file"
                    text_size : self.size
                    valign : "middle"
                TextInput :
                    id : TI_graph
                    text : "graph.html"
                    multiline : False
                    on_text_validate : root.show_graph()
                    size_hint : 1,0.3
                Label :
                    text : "3) Input name to save graph show the graph before saving saved as json file"
                    text_size : self.size
                    valign : "middle"

                TextInput :
                    id : TI_save
                    text : "Save_graph.json"
                    size_hint : 1,0.3
                    multiline : False
                    on_text_validate : root.save_graph()
                Label :
                    text : "Clear data before generating new graph"
                    text_size : self.size
                    valign : "middle"

                Button :
                    text : "Clear data"
                    size_hint : 1,0.3
                    on_release : root.clear_graph_data()
<Box_reac>
    orientation : "vertical"
    size_hint_x : 0.4

    Button :
        size_hint_x : 1
        text : "hide/show reaction list"
        on_release : root.toggle_reac_list()

    Label :
        text : "Click metabolites in list to add to graph"
        size_hint_y : 0.2

    Reac_List :
        opacity : 0
        id : Reac_list

    TI_reac :
        id : TI_reac
        multiline : False
        size_hint_y : 0.2
        size_hint_x : 1
        on_text_validate :

<Box_meta>:
    orientation : "vertical"
    size_hint_x : 0.4

    Button :
        size_hint_x : 1
        text : "hide/show metabolites list"
        on_release : root.toggle_meta_list()

    Label :
        text : "Click reaction in list to add to graph"
        size_hint_y : 0.2

    Meta_List :
        opacity : 0
        id : Meta_list

    TI_meta :
        id : TI_Metab
        text : ""
        size_hint_y : 0.2
        size_hint_x : 1

<Meta_List>:
    viewclass : "Meta_list_buttons"
    RecycleBoxLayout :
        default_size : None, 50
        default_size_hint : 1, None
        size_hint_y : None
        height : self.minimum_height
        orientation : "vertical"

<Reac_List>:
    viewclass : "Reac_list_buttons"
    RecycleBoxLayout :
        default_size : None, 50
        default_size_hint : 1, None
        size_hint_y : None
        height : self.minimum_height
        orientation : "vertical"

<TI_meta>:
    id : TI_meta
    size_hint : 0.3,0.3
    pos_hint : {"center_x" : 0.5, "top" : 1}

<TI_reac>:
    id : TI_react
    size_hint : 0.3,0.3
    pos_hint : {"center_x" : 0.5, "top" : 1}
       
                
<Button>:
    size_hint: 0.27,0.12  
    font_size: 20
    color: 1,1,1
    background_color: "#E11E1E"
    

<Parameters>:
    BoxLayout:
        orientation:"vertical"
        size: root.size
        pos: root.pos
        BoxLayout:
            orientation:"vertical"
            size_hint: (1,0.8)
            Label:
                font_size : 20
                text : "Don't forget to press enter to save each parameter "
                color:"#F00020"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.1}
                size_hint: (0.1,0.1)
            Label:
                text : "blast's identity percentage tolerated ([0-100])"
                
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            TextInput:
                id: input1
                multiline : False
                on_text_validate : root.add_value("i","input1")
                text : ""
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            Label:
                text : "tolerated length difference between the two aligned sequences([0-100])"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            TextInput:
                id:input2
                multiline : False
                on_text_validate : root.add_value("d","input2")
                text : ""
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            Label:
                text : "blast's e-value threshold value([0-1])"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            TextInput:
                id:input3
                multiline : False
                on_text_validate : root.add_value("ev","input3")
                text : ""
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            Label:
                text : "minimum sequence coverage tolerated([0-100])"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            TextInput:
                id:input4
                multiline : False
                text : ""
                on_text_validate : root.add_value("c","input4")
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            Label:
                text : "blast's bit-score threshold value ([0-1000])"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            TextInput:
                id:input5
                multiline : False
                on_text_validate : root.add_value("bs","input5")
                text : ""
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            Label:
                text : "output draft name"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            TextInput:
                id:input6
                multiline : False
                on_text_validate : root.add_value("nom","input6")
                text : ""
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
        FloatLayout:
            size_hint: (1,0.2)
            Button:
                text : "Return"
                on_release : root.cancel()
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.3,"center_y" : 0.3}
                size_hint: (0.3,0.4)
            Button:
                text : "Reset"
                on_press : root.reset()
                on_press : root.cancel()
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.7,"center_y" : 0.3}
                size_hint: (0.3,0.4)
        
<DirectoryName>:
    BoxLayout:
        orientation:"vertical"
        size: root.size
        pos: root.pos
        BoxLayout:
            orientation:"vertical"
            size_hint: (1,1)
            Label:
                text : "Enter directory file"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.2}
                size_hint: (0.1,0.1)
            TextInput:
                id:inputdirec
                multiline : False
                text : ""
                pos_hint: {"center_x" : 0.5,"center_y" : 0.5}
                size_hint: (0.4,0.1)
        FloatLayout:
            size_hint: (1,0.3)
            Button:
                text : "Validate"
                on_press:root.add_directory("inputdirec")
                on_release : root.cancel()
                background_color:"#fcbba1"
                pos_hint: {"center_x" : 0.5,"center_y" : 0.5}
                size_hint: (0.3,0.4)
            

            

