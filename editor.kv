<Root>:

    #creation du tabbedpanel
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    tab_color: "red"
    do_default_tab: False

    TabbedPanelItem: #creation du premier onglet
        text: 'Main' #titre du premier onglet
        FloatLayout: #se cree sans probleme
            size_hint_y: None
            height: 30
            Button: # on ne voit pas les boutons
                id:"btn"
                size: 70,70
                size_hint: None,None
                text: 'Load'
                on_release: root.show_load() 
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Load'
                on_release: root.show_load()
        
            Button:
                text: 'Save'
                on_release: root.show_save()
    
        FloatLayout: # se cree
            TextInput: #se cree
                id: text_input
                text: ''

            RstDocument: #se cree
                text: text_input.text
                show_errors: True


    TabbedPanelItem: # deuxieme onglet
        text: 'Blast'
        FloatLayout: #se cree
            size_hint_y: None
            height: 30
            Button: # ne se cree pas
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Load'
                on_release: root.show_load()
        
            Button:
                text: 'Save'
                on_release: root.show_save()
    


<LoadDialog>: 
    FloatLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        FloatLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    FloatLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        FloatLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)