    size:(400,400)
    tab_pos : "top_mid"
    on_current_tab : root.on_tab_change()
    TabbedPanelItem:

        id : Main
        text: "Main"
        font_size:  20
        FloatLayout:
            id : Main

            Label :
                id : files_main
                text : "Currently selected files :\n\ngff :\n\nsbml :\n\nfna :\n\ntsv :\n\nfaaM :\n\nfaaS :"
                pos_hint : {"center_x" : 0.15, "center_y" : 0.6}
